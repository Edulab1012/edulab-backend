{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JS features
    "module": "CommonJS",                        // For Node.js compatibility
    "lib": ["ES2020"],                           // Use latest JS features
    "moduleResolution": "Node",                  // Resolve modules like Node.js
    "esModuleInterop": true,                     // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,    // Enforce consistent casing
    "strict": true,                              // Turn on all strict type-checking options
    "skipLibCheck": true,                        // Skip type checking for node_modules
    "resolveJsonModule": true,                   // Allow importing .json files
    "noImplicitAny": true,                       // Prevent variables with implicit `any` types
    "outDir": "dist",                            // Output directory for compiled files
    "sourceMap": true,                           // Generate source maps
    "types": ["node", "express"]                 // Include Node and Express types
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}